<?xml version='1.0' encoding='utf-8'?>
<widget id="nl.parkietenvilla.kweekinfo" version="0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>KweekInfo</name>
    <description>
        ParkietenVilla KweekInfo app, handige informatie voor tijdens het vogelkweekseizoen
    </description>
    <author email="jeroenpeters1986@gmail.com" href="http://jeroen.in">
        Jeroen Peters
    </author>
    <content src="index.html" />
    <icon src="img/icon.png" />
    <plugin name="cordova-plugin-whitelist" version="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
